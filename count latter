#include<bits/stdc++.h>
using namespace std;
int main()
{
    string s;
    cin>>s;
    int n=s.length();
    sort(s.begin(),s.end());
    int m=0,p=0;
    for(int i=m;i<=n-1;i+=m)
    {
       for(int j=i;j<n;j++){
       if(s[j]==s[j+1])
        {
         p+=1;
        }
        else 
        break;
    }
    m=p+1;
    cout<<s[i]<<" : "<<m<<endl;
    p=0;
       }
}
